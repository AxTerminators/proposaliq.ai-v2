{
  "name": "KanbanConfig",
  "type": "object",
  "properties": {
    "organization_id": {
      "type": "string",
      "description": "ID of the organization this config belongs to"
    },
    "columns": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for the column"
          },
          "display_name": {
            "type": "string",
            "description": "User-customized name for the column"
          },
          "order": {
            "type": "number",
            "description": "Display order of the columns"
          },
          "type": {
            "type": "string",
            "enum": [
              "default_status",
              "custom_stage"
            ],
            "description": "Indicates if it's a default status column or custom user-defined stage"
          },
          "default_status_mapping": {
            "type": "string",
            "description": "If type is default_status, maps to actual proposal status"
          },
          "is_collapsed": {
            "type": "boolean",
            "default": false,
            "description": "Whether the column is collapsed"
          }
        }
      },
      "description": "Array of column configurations"
    }
  },
  "required": [
    "organization_id",
    "columns"
  ]
}