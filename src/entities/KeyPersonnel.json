{
  "name": "KeyPersonnel",
  "type": "object",
  "properties": {
    "organization_id": {
      "type": "string",
      "description": "Organization that owns this personnel record"
    },
    "full_name": {
      "type": "string",
      "description": "Full legal name"
    },
    "position_title": {
      "type": "string",
      "description": "Current position/title"
    },
    "email": {
      "type": "string",
      "format": "email",
      "description": "Contact email"
    },
    "phone": {
      "type": "string",
      "description": "Contact phone"
    },
    "location": {
      "type": "string",
      "description": "Current location/city"
    },
    "profile_photo_url": {
      "type": "string",
      "description": "URL to profile photo"
    },
    "years_experience": {
      "type": "number",
      "description": "Total years of professional experience"
    },
    "education": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "degree": {
            "type": "string"
          },
          "field": {
            "type": "string"
          },
          "institution": {
            "type": "string"
          },
          "graduation_year": {
            "type": "number"
          },
          "honors": {
            "type": "string"
          }
        }
      },
      "description": "Education history"
    },
    "certifications": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "certification_name": {
            "type": "string"
          },
          "issuing_organization": {
            "type": "string"
          },
          "issue_date": {
            "type": "string",
            "format": "date"
          },
          "expiration_date": {
            "type": "string",
            "format": "date"
          },
          "credential_id": {
            "type": "string"
          }
        }
      },
      "description": "Professional certifications"
    },
    "security_clearance": {
      "type": "string",
      "enum": [
        "none",
        "public_trust",
        "secret",
        "top_secret",
        "ts_sci",
        "q_clearance"
      ],
      "description": "Current security clearance level"
    },
    "clearance_status": {
      "type": "string",
      "enum": [
        "active",
        "inactive",
        "pending",
        "expired"
      ],
      "description": "Status of security clearance"
    },
    "clearance_expiration": {
      "type": "string",
      "format": "date",
      "description": "When clearance expires"
    },
    "work_history": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "company": {
            "type": "string"
          },
          "position": {
            "type": "string"
          },
          "start_date": {
            "type": "string",
            "format": "date"
          },
          "end_date": {
            "type": "string",
            "format": "date"
          },
          "is_current": {
            "type": "boolean"
          },
          "description": {
            "type": "string"
          },
          "key_achievements": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "description": "Employment history"
    },
    "skills": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Technical and professional skills"
    },
    "core_competencies": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Core competency areas"
    },
    "government_resume": {
      "type": "string",
      "description": "Formatted government resume in HTML"
    },
    "executive_bio": {
      "type": "string",
      "description": "Executive biography (2-3 paragraphs)"
    },
    "availability_status": {
      "type": "string",
      "enum": [
        "available",
        "limited",
        "committed",
        "unavailable"
      ],
      "default": "available",
      "description": "Current availability for proposals"
    },
    "current_commitments": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "proposal_id": {
            "type": "string"
          },
          "proposal_name": {
            "type": "string"
          },
          "role": {
            "type": "string"
          },
          "time_commitment": {
            "type": "string"
          },
          "start_date": {
            "type": "string",
            "format": "date"
          },
          "end_date": {
            "type": "string",
            "format": "date"
          }
        }
      },
      "description": "Current proposal commitments"
    },
    "hourly_rate": {
      "type": "number",
      "description": "Standard hourly rate"
    },
    "labor_category": {
      "type": "string",
      "description": "Default labor category"
    },
    "relevant_projects": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "project_name": {
            "type": "string"
          },
          "client": {
            "type": "string"
          },
          "role": {
            "type": "string"
          },
          "duration": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "contract_value": {
            "type": "number"
          }
        }
      },
      "description": "Relevant past projects"
    },
    "languages": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "language": {
            "type": "string"
          },
          "proficiency": {
            "type": "string",
            "enum": [
              "basic",
              "intermediate",
              "advanced",
              "fluent",
              "native"
            ]
          }
        }
      },
      "description": "Language proficiencies"
    },
    "publications": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Published works, papers, articles"
    },
    "awards": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Professional awards and recognition"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Tags for search and categorization"
    },
    "notes": {
      "type": "string",
      "description": "Internal notes about this person"
    },
    "last_resume_update": {
      "type": "string",
      "format": "date-time",
      "description": "When resume was last updated"
    },
    "usage_count": {
      "type": "number",
      "default": 0,
      "description": "Number of times used in proposals"
    }
  },
  "required": [
    "organization_id",
    "full_name"
  ]
}