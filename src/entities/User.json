{
  "name": "User",
  "type": "object",
  "properties": {
    "admin_role": {
      "type": "string",
      "enum": [
        "super_admin",
        "operations_admin",
        "content_manager",
        "billing_manager",
        "ai_manager",
        "security_officer",
        "reviewer",
        "tech_support",
        "marketing_manager"
      ],
      "description": "Admin role with specific permissions for platform management"
    },
    "organization_app_role": {
      "type": "string",
      "enum": [
        "proposal_manager",
        "writer",
        "reviewer",
        "guest",
        "viewer"
      ],
      "default": "viewer",
      "description": "Application role within their subscribing organization for proposal collaboration"
    },
    "mfa_enabled": {
      "type": "boolean",
      "default": false,
      "description": "Multi-factor authentication enabled"
    },
    "last_login": {
      "type": "string",
      "format": "date-time",
      "description": "Last login timestamp"
    },
    "is_active": {
      "type": "boolean",
      "default": true,
      "description": "Account active status"
    }
  },
  "required": []
}