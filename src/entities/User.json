{
  "name": "User",
  "type": "object",
  "properties": {
    "user_role": {
      "type": "string",
      "enum": [
        "admin",
        "proposal_manager",
        "proposal_writer",
        "reviewer",
        "guest",
        "viewer"
      ],
      "default": "proposal_writer",
      "description": "Organization-level role for permissions within their org"
    },
    "super_admin_role": {
      "type": "string",
      "enum": [
        "owner",
        "ops_admin",
        "content_manager",
        "billing_manager",
        "ai_manager",
        "security_officer",
        "reviewer",
        "tech_support",
        "marketing_manager"
      ],
      "description": "Platform-wide super admin role for managing the entire app"
    },
    "organization_id": {
      "type": "string",
      "description": "Reference to user's organization"
    },
    "departments": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Department assignments for access control"
    },
    "assigned_proposals": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Array of proposal IDs user has access to"
    },
    "permissions_override": {
      "type": "object",
      "description": "Custom permission overrides for this user",
      "properties": {
        "can_create_proposals": {
          "type": "boolean"
        },
        "can_delete_proposals": {
          "type": "boolean"
        },
        "can_assign_tasks": {
          "type": "boolean"
        },
        "can_approve_sections": {
          "type": "boolean"
        },
        "can_access_ai_features": {
          "type": "boolean"
        },
        "can_manage_templates": {
          "type": "boolean"
        },
        "can_view_analytics": {
          "type": "boolean"
        },
        "can_manage_library": {
          "type": "boolean"
        }
      }
    },
    "last_login": {
      "type": "string",
      "format": "date-time",
      "description": "Last login timestamp"
    },
    "is_active": {
      "type": "boolean",
      "default": true,
      "description": "Whether user account is active"
    },
    "phone": {
      "type": "string",
      "description": "User phone number"
    },
    "title": {
      "type": "string",
      "description": "User job title"
    }
  },
  "required": []
}